---
import Button from "@components/Button.astro"; 

import "@root/index.scss";
---

<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="ArmCord is a custom client designed to enhance your Discord experience while keeping everything lightweight.">
    <meta name="keywords" content="discord, armcord, arm, linux, wayland">
    <meta name="author" content="ArmCord Team">
    <title>ArmCord</title>
  </head>
  <body>
    <nav>
      <a href="/">
        <img src="/logo.png" alt="ArmCord logo" />
      </a>
      <Button name="Download" href="/download" />
      <Button name="FAQ" href="/faq" />
      <Button name="Screenshots" href="/screenshots" />
      <Button name="Github" href="https://github.com/ArmCord/ArmCord" />
      <Button name="Support" href="https://discord.gg/TnhxcqynZ2"/>
      <Button name="Donate" href="https://github.com/sponsors/smartfrigde" />
    </nav>
    <slot />
    <p class="legal">Discord is trademark of Discord Inc. ArmCord is not affiliated with or endorsed by Discord Inc.</p>
  </body>
</html>